{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} nous contacter{% endblock %}

{% block body %}

<!-- /Header -->
	<section class="parallax_window_in bg-image" data-parallax="scroll" data-image-src="{{ asset('themes/front/img/core/1.jpeg')}}" style="" data-natural-width="1120" data-natural-height="900">
		<div id="sub_content_in">
			<h1>Nous contacter</h1>
			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod</p>
		</div>
	</section>
	<!-- /section -->

	<!-- START Contact Us AREA -->		
	<section id="contact" class="contact-us section-padding bg-light">
		<div class="container">				
			<div class="row align-items-center">					
				<div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
					<div class="section-title text-left wow zoomIn">
						<span>Restons en contact</span>	
						<h2>Nous contacter</h2>
					</div>
					{{ form_start(form, {'attr': {'class': "contact-form"}}) }}
                        <div class="contact__form mb-4">
                            <h3 class="contact__title">Contact Form</h3>
                            <p>veuillez nous envoyer un message en remplissant le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.</p>
        
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    {{ form_row(form.nom) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="form-group col-md-12">
                                    {{ form_row(form.sujet) }}
                                </div>
                    
                                <div class="form-group col-md-12">
                                    {{ form_row(form.content) }}
                                </div>
                    
                                <div class="col-md-12 text-left">
									<button type="submit" value="Send message" name="submit" class="btn btn-primary" title="Submit Your Message!"><i class="fa fa-send"></i> Envoyer votre message</button>
								</div>
                                
                            </div>
                        </div>
                    {{ form_end(form) }}						
				</div><!-- END COL-->

				<div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
					<div class="single-contact">
						<i class="ti-location-pin"></i>
						<div class="contact-content">
							546 Huntz Lane Worcester,<br>
							Massachusetts 01608 USA 
						</div>
					</div><!-- END single-contact -->	

					<div class="single-contact">
						<i class="ti-email"></i>
						<div class="contact-content">
							email@yoursite.com <br>
							email@yoursite.com 
						</div>
					</div><!-- END single-contact -->		

					<div class="single-contact">
						<i class="ti-link"></i>
						<div class="contact-content">
							<a href="#">http://example.com</a><br>
							<a href="#">http://example.com</a>
						</div>
					</div><!-- END single-contact -->									
				</div><!-- END Col -->
			</div><!-- END ROW -->
		</div><!-- END CONTAINER -->	
	</section>
	<!-- END Contact Us -->

{% endblock %}