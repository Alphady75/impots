{% extends 'admin.html.twig' %}

{% block title %}Comptes utilisateurs ( {{ users.getTotalItemCount }} ){% endblock %}

{% block pageHeader %}

<div class="page-header">

    <!-- Breadcrumb start -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><h1 class="h3 font-weight-bold">Comptes utilisateurs <span> ( {{ users.getTotalItemCount }} )</span></h1></li>
    </ol>
    <!-- Breadcrumb end -->

    <!-- App actions start -->
    <div class="app-actions">
        <a href="{{ path('admin_users_new') }}" class="btn active">Crée un compte utilisateur</a>
    </div>
    <!-- App actions end -->

</div>

{% endblock %}

{% block body %}

<div class="table-responsive mb-4">
    <table class="table table-hover table-bordered m-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Nom(s)</th>
                <th>Prénom(s)</th>
                <th>Genre</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>
                    <div class="avatar-group">
                        <div class="avatar md">

                            {% if user.avatar %}
                                <img src="{{ vich_uploader_asset(user) | imagine_filter('midle_avatar') }}" class="circle" alt="{{ user.prenoms }}" />
                            {% else %}
                                <img src="{{ asset('img/user.jpg') }}" class="circle" alt="{{ user.prenoms }}" />
                            {% endif %}

                        </div>
                    </div>
                </td>
                <td><strong>{{ user.noms }}</strong></td>
                <td>{{ user.prenoms }}</td>
                <td>{{ user.genre }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="badge badge-pill badge-primary">Administrateur</div>
                    {% endif %}

                    {% if is_granted('ROLE_MODERATEUR') %}
                    <div class="badge badge-pill badge-primary">Modérateur</div>
                    {% endif %}

                    {% if is_granted('ROLE_USER') %}
                    <div class="badge badge-pill badge-primary">Utilisateur</div>
                    {% endif %}

                </td>
                <td>
                    <a href="{{ path('admin_users_show', {'id': user.id}) }}" class="btn btn-info">Profil</a>
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ knp_pagination_render(users) }}

{% endblock %}
