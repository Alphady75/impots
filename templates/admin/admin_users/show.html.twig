{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    <span class="badge badge-primary">
                        {% if is_granted('ROLE_ADMIN') %}
                            Administrateur
                        {% endif %}
                    </span>
                </td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_users_index') }}">back to list</a>

    <a href="{{ path('admin_users_edit', {'id': user.id}) }}">edit</a>

    {{ include('admin_users/_delete_form.html.twig') }}
{% endblock %}
