{{ form_start(form) }}

<div class="card">
    <div class="card-body">

        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Titre de l'article</label>
            <div class="col-sm-10">
                {{ form_row(form.name) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">MÃ©dia</label>
            <div class="col-sm-10">
                {{ form_row(form.imageFile) }}

                {% if app.request.attributes.get('_route') == 'admin_posts_edit' %}

                {% if post.imageName %}

                <img src="{{ vich_uploader_asset(post) | imagine_filter('midle_size') }}" class="img-fluid d-block mb-3">

                {% else %}

                <p>Aucune image</p>

                {% endif %}

                {% endif %}

            </div>
        </div>

        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Contenu</label>
            <div class="col-sm-10">
                {{ form_row(form.content) }}
            </div>
        </div>

        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Options</label>
            <div class="col-sm-10">
                {{ form_row(form.online) }}
            </div>
        </div>

        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Actions</label>
            <div class="col-sm-10">
                <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

                {% if app.request.attributes.get('_route') == 'admin_posts_edit' %}

                {{ include('admin/admin_posts/_delete_form.html.twig') }}

                {% endif %}
            </div>
        </div> 

    </div>
</div>

{{ form_end(form) }}



