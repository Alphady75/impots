{% extends 'admin.html.twig' %}

{% block title %}Articles ( {{ posts.getTotalItemCount }} ){% endblock %}

{% block pageHeader %}

<div class="page-header">

    <!-- Breadcrumb start -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><h1 class="h3 font-weight-bold">Artilces <span> ( {{ posts.getTotalItemCount }} )</span></h1></li>
    </ol>
    <!-- Breadcrumb end -->

    <!-- App actions start -->
    <div class="app-actions">
        <a href="{{ path('admin_posts_new') }}" class="btn active">Crée un article</a>
    </div>
    <!-- App actions end -->

</div>

{% endblock %}

{% block body %}

<div class="table-responsive mb-4">
    <table class="table table-hover table-bordered m-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Média</th>
                <th>Statut</th>
                <th>Crée le</th>
                <th>Modifié le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.name }}</td>
                <td>{{ post.slug }}</td>
                <td>
                    {% if post.imageName %}
                        <img src="{{ vich_uploader_asset(post) | imagine_filter('midle_avatar') }}">
                    {% endif %}
                </td>
                <td><span class="badge badge-pill badge-{{ post.online ? 'success' : 'secondary' }}">{{ post.online ? 'Public' : 'Privé' }}</span></td>
                <td>{{ post.created ? post.created|date('d/m/Y') : '' }}</td>
                <td>{{ post.updated ? post.updated|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('admin_posts_edit', {'id': post.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="9">Aucun article</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ knp_pagination_render(posts) }}

{% endblock %}
